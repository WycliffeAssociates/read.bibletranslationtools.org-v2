---
const linkBase = "https://bibleineverylanguage.org"
import type { i18nDictKeysType } from "@lib/i18n"
export interface Props {
  preferredLocale: i18nDictKeysType
  initialDict: Record<string,string>
  repoUrl: string
}
const menu = [
  "processes",
  "resources",
  "translations",
  "tools",
  "support",
]
const { preferredLocale, initialDict, repoUrl } = Astro.props
import Logo from "@images/logo.png"
import LogoWebP from "@images/logo.webp"
import { Header } from "./Header"
---

<!-- using astro file for sever work and for client directive;  -->
<div>
  <Header
    client:load
    logo={Logo.src}
    logoWebP={LogoWebP.src}
    menuItems={menu}
    repoUrl={repoUrl}
    preferredLocale={preferredLocale}
    linkBase={linkBase}
    initialDict={initialDict}
  />
</div>

<style is:global>
  .languagePicker {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .languagePicker::after {
    content: "";
    width: 0;
    height: 0;
    color: white;
    border-left: 6px solid transparent;
    border-right: 6px solid transparent;
    border-top: 9px solid white;
    margin-inline: 0.25rem;
    transition: all 0.1s;
  }
  .languagePicker.open::after {
    transform: rotate(180deg);
    transition: all 0.1s;
  }
</style>
